{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "outDir": "./dist",
  },
  "include": ["src/**/*.ts", "src/app.ts"],
  "exclude": [ "node_modules","**/*.spec.ts" ]
}